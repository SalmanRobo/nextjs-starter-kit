# PRODUCTION-CRITICAL: Frontend URL (MUST be set to auth.aldari.app for production)
NEXT_PUBLIC_APP_URL=https://auth.aldari.app

# PRODUCTION-CRITICAL: Supabase Configuration (REQUIRED)
# Format: https://yourprojectid.supabase.co
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
# Anonymous key from Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
# Service role key (optional but recommended for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Cloudflare R2 (for property images)
R2_UPLOAD_IMAGE_ACCESS_KEY_ID=your-r2-access-key-id
R2_UPLOAD_IMAGE_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
R2_UPLOAD_IMAGE_BUCKET_NAME=your-bucket-name

# Google OAuth (for Supabase auth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI API (for property descriptions)
OPENAI_API_KEY=your-openai-api-key

# ALDARI App Configuration
NEXT_PUBLIC_APP_NAME=ALDARI
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY=your-anthropic-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
MISTRAL_API_KEY=your-mistral-api-key
XAI_API_KEY=your-xai-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
OLLAMA_API_KEY=your-ollama-api-key

# ðŸš€ SUPABASE CREDENTIALS (REQUIRED)
EXPOPUBLICSUPABASEURL=your-supabase-project-url
EXPOPUBLICSUPABASEANONKEY=your-supabase-anon-key

# Database Configuration (Required for Drizzle ORM)
DATABASE_URL=postgresql://username:password@hostname:port/database

# SUPABASE MCP
SUPABASE_ACCESS_TOKEN=your-supabase-access-token